<% layout('notice/index') -%>
  <link rel="stylesheet" href="/stylesheets/new.css" />
  <script src="//code.jquery.com/jquery-3.4.1.min.js"></script>

  <div class="container row">
    <h1 class="h1 text-center mt-5">Edit Post</h1>
    <div class="return_btn">
      <a href="/notice/notice/index" class="btn btn-secondary">모든 게시글 보기</a>
    </div>
    <form action="/notice/notice/<%= post._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label class="form-label" for="title">제목</label>
        <input class="form-control" type="text" id="title" name="post[title]" value="<%= post.title %>" required />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="contents">내용</label>
        <textarea class="form-control" type="text" id="contents" name="post[contents]" required>
<%= post.contents %></textarea>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3 submit_btn">
        <button class="btn btn-success">수정하기</button>
      </div>
    </form>
  </div>
  <script>
    //새로고침 시 확인 창
    $(document).ready(function () {
      // Warning
      $(window).on('beforeunload', function () {
        //do something
        return "Any changes will be lost";
      });
      // Form Submit
      $(document).on("submit", "form", function (event) {
        // disable warning
        $(window).off('beforeunload');
      });
    })


    //작성하기 버튼으로 글을 저장할 때 확인창
    $('.submit_btn').click(function () {

      var res = confirm("현재 작성된 내용으로 글을 등록하시겠습니까?");
      if (res) {
        //yes
        $("#submit_form").submit();
      }
      else {
        //no
        return false;
      }

    });
  </script>