<% layout('notice/index') -%>
<link rel="stylesheet" href="/stylesheets/aside-tab.css" />
<link rel="stylesheet" href="/stylesheets/notice.css" />

<div class="container tab-pane show active">
  <div class="notice_head">
    <h2 class="notice_title h1"><%- notice.subroutes[0] %></h2>
  </div>
  <button type="button" class="btn btn-success mb-3">
    <a href="/notice/notice/new">게시글 작성하기</a>
  </button>
  <div class="table_padding">
    <table class="table table-border table-hover" style="table-layout: fixed">
      <thead class="bg-light">
        <tr>
          <th scope="row" style="width: 10%" class="fs-6 text-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              fill="currentColor"
              class="bi bi-hash"
              viewBox="0 0 16 16"
            >
              <path
                d="M8.39 12.648a1.32 1.32 0 0 0-.015.18c0 .305.21.508.5.508.266 0 .492-.172.555-.477l.554-2.703h1.204c.421 0 .617-.234.617-.547 0-.312-.188-.53-.617-.53h-.985l.516-2.524h1.265c.43 0 .618-.227.618-.547 0-.313-.188-.524-.618-.524h-1.046l.476-2.304a1.06 1.06 0 0 0 .016-.164.51.51 0 0 0-.516-.516.54.54 0 0 0-.539.43l-.523 2.554H7.617l.477-2.304c.008-.04.015-.118.015-.164a.512.512 0 0 0-.523-.516.539.539 0 0 0-.531.43L6.53 5.484H5.414c-.43 0-.617.22-.617.532 0 .312.187.539.617.539h.906l-.515 2.523H4.609c-.421 0-.609.219-.609.531 0 .313.188.547.61.547h.976l-.516 2.492c-.008.04-.015.125-.015.18 0 .305.21.508.5.508.265 0 .492-.172.554-.477l.555-2.703h2.242l-.515 2.492zm-1-6.109h2.266l-.515 2.563H6.859l.532-2.563z"
              />
            </svg>
          </th>
          <th scope="row" style="width: 90%" class="fs-6 text-center">제목</th>
          <th scope="row" style="width: 107px" class="fs-6 text-center">
            작성자
          </th>
          <th scope="row" style="width: 107px" class="fs-6 text-center">
            날짜
          </th>
        </tr>
      </thead>
      <tbody>
        <% for(const [i, post] of posts.entries()) { %>
        <tr>
          <th class="text-center" scope="row"><%= i + 1 %></th>
          <th class="text-center">
            <a class="primary" href="/notice/notice/<%= post._id %>"
              ><%= post.title %></a
            >
          </th>
          <th class="text-center"><%= post.author.username %></th>
          <th class="text-center">
            <%= post.date.toLocaleDateString("en-US") %>
          </th>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
