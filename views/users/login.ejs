<% layout('layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center fs-4 fw-semibold">Login</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="studentID">Student-ID</label>
        <input
          class="form-control"
          type="text"
          id="studentID"
          name="studentID"
          minlength="8"
          maxlength="8"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="password"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3 d-flex gap-3">
        <button class="btn btn-success w-50">Login</button>
        <button type="button" class="btn btn-success w-50">
          <a href="/register">Register</a>
        </button>
      </div>
    </form>
  </div>
</div>
