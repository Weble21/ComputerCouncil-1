<% layout('community/index') -%>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= post.title%></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= post.author%></li>
        <li class="list-group-item">$<%= post.date%></li>
      </ul>
      <div class="card-body">
        <p class="card-title"><%= post.contents%></p>
      </div>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/community/board/<%=post._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/community/board/<%=post._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
  <div class="col-6">
    <h2>Leave a comment</h2>
    <form
      action="/community/board/<%=post._id%>/comments"
      method="POST"
      class="mb-3 validated-form needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label class="form-label" for="author">이름</label>
        <input
          type="text"
          class="form-control text-muted"
          name="comment[author]"
          id="author"
          value="익명"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="contents">내용</label>
        <textarea
          class="form-control"
          name="comment[contents]"
          id="contents"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% for(let comment of post.comments) { %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-text text-muted"><%= comment.author %></h5>
        <p class="card-text"><%= comment.contents %></p>
        <form
          action="/community/board/<%=post._id%>/comments/<%=comment._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
